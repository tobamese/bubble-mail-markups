-bubblebox(n)
	.bubble-overlay
		background-color n
		.button
			&:hover
				color n
	.bottom
		background-color n
		&:after
			color n
	
-bubblepost(n)
	.bubble-img
		color n
	>[class^="i-"]
	>[class*=" i-"]
		color n
	.bubble-anchor
		color n
	.i-bubble
		color n
	.rooms
		a
			&:before
				background-color n
	.type.onboarding
		color n
	.bubble-name
		color n

-bubble-modal(n)
	.modal-cover
		border-color n
	.post
		.comments-box
			.submit-bar
				.submit-button
					background-color n
					border-color n
	.info
		.bubble
			.i-bubble-2
				color n
	@media (max-width: 767px)
		.top
			background-color n

-bubblecover(n)
	border-bottom-color n
	.bubble-image
		color n

-mainnav(n)
	li
		a
			&:hover
				border-bottom-color n
	.active
		a
			border-bottom-color n	




-box(n)
	.post-header
		border-bottom-color n!important
	.post-footer
		.bubble
			color n
	.bubble
		color n
		&:hover
			color lighten(n, 10%)
	.comments-button
		box-shadow 0 2px 0 darken(n, 20%)
		&:active
		&:focus
			box-shadow 0 0 0 transparent
		.comments
			color n
		&:after
			border-bottom-color n
	.submit-button
		background-color n
		border-bottom-color darken(n, 20%)
	.play-button
		&:hover
			background-color n
			border-color n

